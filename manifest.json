{
  "manifest_version": 3,
  "name": "Page Health Analyzer",
  "version": "1.0.2",
  "description": "Analyze webpage performance health against configurable NFR thresholds",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Page Health Analyzer"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
